<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gigaworks.tech.bible">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Now Playing"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoToolBar" />
        <activity
            android:name=".BibleRead"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoToolBar" />
        <activity
            android:name=".ContactUs"
            android:label="Contact Us"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".DailyActivity"
            android:label="Hindi Daily Bread"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".YeshuActivity"
            android:label="Yeshu Masih ka Jeevan"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".BooksActivity"
            android:label="Gujarati Bible"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".AudioBookActivity"
            android:label="Audio Books"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".DailyDevotionalActivity"
            android:label="Daily Devotionals"
            android:parentActivityName=".HomeActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

</manifest>